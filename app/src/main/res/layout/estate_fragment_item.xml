<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_horizontal_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_image"
        android:layout_width="160dp"
        android:layout_height="147dp"
        android:layout_weight="1"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/pict3" />

    <TextView
        android:id="@+id/list_type_text"
        android:layout_width="269dp"
        android:layout_height="42dp"
        android:layout_margin="@dimen/text_margin"
        android:layout_weight="1"
        android:text="Duplex"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/list_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_city_text"
        android:layout_width="297dp"
        android:layout_height="48dp"
        android:layout_margin="@dimen/text_margin"
        android:layout_marginTop="7dp"
        android:layout_weight="1"
        android:text="Brooklyn"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/list_image"
        app:layout_constraintTop_toBottomOf="@+id/list_type_text" />

    <TextView
        android:id="@+id/list_price_text"
        android:layout_width="541dp"
        android:layout_height="41dp"
        android:layout_margin="@dimen/text_margin"
        android:layout_weight="1"
        android:text="$41,480.120"
        android:textColor="@color/colorAccent"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/list_image"
        app:layout_constraintTop_toBottomOf="@+id/list_city_text" />

</androidx.constraintlayout.widget.ConstraintLayout>